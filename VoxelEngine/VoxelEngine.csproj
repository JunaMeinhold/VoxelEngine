	<PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
		<DefineConstants>$(DefineConstants);WINDOWS;D3D11;D3D_DEBUG;;SHADER_FORCE_OPTIMIZE</DefineConstants>
